{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es2015","esnext"],
    "moduleResolution": "node",
    "module": "commonjs",
    "outDir": "./dist",
    "declaration": true,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noImplicitReturns": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "sourceMap": true
  },
  "include": [
    "src/**/*"
  ]
}
